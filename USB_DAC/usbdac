#!/bin/bash

if (( $# > 1 )); then
	aplay=$( aplay -l | grep card | tail -1 ) # last line = new power-on card
	sysname=$( echo $aplay | awk -F'[][]' '{print $2}' )
	/src/http/settings/acards/acards_mpdconf.sh
else
	sysname=$( redis-cli get ao )
fi

mpc enable only "$sysname"

extlabel=$( grep extlabel "/src/http/settings/acards/dac/$sysname" | cut -d: -f2- )

curl -s -X POST 'http://localhost/pub?id=notify' -d '{ "title": "Audio Output Switched", "text": "'"$extlabel"'", "icon": "output" }'
